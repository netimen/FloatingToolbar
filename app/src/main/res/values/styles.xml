<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarElement">
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>

    <style name="TextIcon">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_icon</item>
    </style>

    <style name="SpecialButton" parent="TextIcon">
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
    </style>

</resources>
